<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:id="@+id/main"
    android:background="#D19A72"
    tools:context=".HealthDetailsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="#FFFFFF"
        android:layout_marginTop="200dp"
        android:layout_gravity="center">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Health Details"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#132348"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="200dp" />

        <!-- Personal Information -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tilFullName"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name"
                android:textColor="#132348"
                android:textColorHint="#A1A1A1" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tilAge"
            app:layout_constraintTop_toBottomOf="@id/tilFullName"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Age"
                android:inputType="number"
                android:textColor="#132348"
                android:textColorHint="#A1A1A1" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tilGender"
            app:layout_constraintTop_toBottomOf="@id/tilAge"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Gender"
                android:textColor="#132348"
                android:textColorHint="#A1A1A1" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tilMedicalConditions"
            app:layout_constraintTop_toBottomOf="@id/tilGender"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etMedicalConditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Medical Conditions"
                android:textColor="#132348"
                android:textColorHint="#A1A1A1" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tilMedications"
            app:layout_constraintTop_toBottomOf="@id/tilMedicalConditions"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etMedications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Medications"
                android:textColor="#132348"
                android:textColorHint="#A1A1A1" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tilSmokingStatus"
            app:layout_constraintTop_toBottomOf="@id/tilMedications"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSmokingStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Smoking Status"
                android:textColor="#132348"
                android:textColorHint="#A1A1A1" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tilAlcoholConsumption"
            app:layout_constraintTop_toBottomOf="@id/tilSmokingStatus"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAlcoholConsumption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Alcohol Consumption"
                android:textColor="#132348"
                android:textColorHint="#A1A1A1" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tilHeight"
            app:layout_constraintTop_toBottomOf="@id/tilAlcoholConsumption"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Height (cm)"
                android:inputType="numberDecimal"
                android:textColor="#132348"
                android:textColorHint="#A1A1A1" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tilWeight"
            app:layout_constraintTop_toBottomOf="@id/tilHeight"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Weight (kg)"
                android:inputType="numberDecimal"
                android:textColor="#132348"
                android:textColorHint="#A1A1A1" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tilGlucose"
            app:layout_constraintTop_toBottomOf="@id/tilWeight"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etGlucose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Glucose"
                android:inputType="numberDecimal"
                android:textColor="#132348"
                android:textColorHint="#A1A1A1" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tilInsulin"
            app:layout_constraintTop_toBottomOf="@id/tilGlucose"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etInsulin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Insulin"
                android:inputType="numberDecimal"
                android:textColor="#132348"
                android:textColorHint="#A1A1A1" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tilBMI"
            app:layout_constraintTop_toBottomOf="@id/tilInsulin"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBMI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="BMI"
                android:inputType="numberDecimal"
                android:textColor="#132348"
                android:textColorHint="#A1A1A1" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tilBloodPressure"
            app:layout_constraintTop_toBottomOf="@id/tilBMI"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBloodPressure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Blood Pressure"
                android:inputType="numberDecimal"
                android:textColor="#132348"
                android:textColorHint="#A1A1A1" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tilDiabetesPedigree"
            app:layout_constraintTop_toBottomOf="@id/tilBloodPressure"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDiabetesPedigree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Diabetes Pedigree Function (optional)"
                android:inputType="numberDecimal"
                android:textColor="#132348"
                android:textColorHint="#A1A1A1" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:backgroundTint="#D19A72"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="32dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/tilDiabetesPedigree"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
